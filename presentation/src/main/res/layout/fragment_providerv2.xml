<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <androidx.cardview.widget.CardView
        android:id="@+id/clHeader"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/brightBackground"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginEnd="140dp"
                android:layout_marginRight="140dp"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <io.forus.me.android.presentation.view.component.text.TextView
                    android:id="@+id/tv_name"
                    style="@style/CardTitle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    app:type="medium"
                    tools:text="Bike" />

                <io.forus.me.android.presentation.view.component.text.TextView
                    android:id="@+id/tv_organization"
                    style="@style/BackToCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    tools:text="Initflow" />

                <io.forus.me.android.presentation.view.component.text.TextView
                    android:id="@+id/tv_fund"
                    style="@style/Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:visibility="gone"
                    app:type="medium"
                    tools:text="Kindpakket" />

            </LinearLayout>

            <io.forus.me.android.presentation.view.component.images.AutoLoadImageView
                android:id="@+id/iv_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="17dp"
                android:src="@drawable/circle_empty" />

            <io.forus.me.android.presentation.view.component.text.TextView
                android:id="@+id/used"
                style="@style/UsedVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_icon"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="17dp"
                android:text="@string/voucher_is_used"
                android:visibility="gone"
                app:type="regular" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/cardDivider"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/clHeader"
        android:layout_height="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="0dp"
        android:alpha="0.8"
        android:background="@drawable/shape_shadow_gradient" />

    <io.forus.me.android.presentation.view.component.text.TextView
        android:id="@+id/tvCurrentOrg"
        style="@style/CardTitle4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="0dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/cardDivider"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        app:type="medium"
        tools:text="Bike" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spOrgs"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentOrg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="1.0" />


    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        app:layout_constraintTop_toBottomOf="@id/spOrgs"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="0dp"
        android:alpha="0.8"
        android:background="@drawable/shape_shadow_gradient" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toTopOf="@id/rl_make"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />




    <RelativeLayout
        android:id="@+id/rl_make"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp">

        <io.forus.me.android.presentation.view.component.buttons.Button
            android:id="@+id/btn_make"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="6dp"
            android:text="@string/vouchers_make_transaction" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

